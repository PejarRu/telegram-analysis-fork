# Telegram API credentials
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here

# User details
TELEGRAM_PHONE=+34640342405
TELEGRAM_USERNAME=@telegram_username_here

# Default webhook endpoint if not provided in request
N8N_WEBHOOK_URL=https://n8n.domain.com/webhook/telegram-messages

# API key for authentication
API_KEY=your_secure_api_key_here

# Telegram session configuration
TELEGRAM_SESSION_FILE=@filesession.session 
TELEGRAM_SESSION_DIR=/app/data
